        }

        @media (min-width: 768px) {
            .splash-container {
                padding: 0;
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .logo {
            font-size: 15vw; /* Responsive: 15% de la largeur de l'écran */
            font-weight: 700;
            letter-spacing: 0.15em;
            margin-bottom: 5vh;
            animation: glow 2s ease-in-out infinite;
        }

        /* Sur grand écran, limiter la taille */
        @media (min-width: 768px) {
            .logo {
                font-size: 72px;
                letter-spacing: 12px;
                margin-bottom: 30px;
            }
        }

        @keyframes glow {
            0%, 100% {
                text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
            }
            50% {
                text-shadow: 0 0 40px rgba(255, 255, 255, 0.6);
            }
        }

        .tagline {
            font-size: 4vw; /* Responsive */
            color: #888;
