<body>
    <div class="splash-container">
        <div class="logo">01001</div>
        <div class="tagline">MICRO-INVESTISSEMENT</div>
        
        <div class="loading-container">
            <div class="loading-bar">
                <div class="loading-progress"></div>
            </div>
            <div class="loading-text" id="loadingText">
                Chargement<span class="dots"></span>
            </div>
            <div class="click-message" id="clickMessage">Click to continue</div>
        </div>
    </div>

    <div class="version">Version 1.0.0</div>

    <script>
        // Variable pour savoir si on peut cliquer
        let canClick = false;

        // Après 8 secondes: chargement terminé
        setTimeout(() => {
            // Cacher complètement le texte "Chargement"
            const loadingText = document.getElementById('loadingText');
            loadingText.style.opacity = '0';
            loadingText.style.transition = 'opacity 0.5s';
            
            // Attendre que le fade out soit terminé
            setTimeout(() => {
                loadingText.style.display = 'none';
                
                // Maintenant afficher "Click to continue"
                const clickMessage = document.getElementById('clickMessage');
                clickMessage.style.display = 'block';
                
                // Petit délai puis fade in
                setTimeout(() => {
                    clickMessage.style.opacity = '1';
                    canClick = true;
                    document.body.classList.add('clickable');
                }, 50);
                
            }, 500); // Attendre la fin du fade out (0.5s)
            
        }, 8000); // 8 secondes de chargement

        // Gérer le clic sur tout le body
        document.body.addEventListener('click', () => {
            if (canClick) {
                redirectToNextPage();
            }
        });

        // Gérer les touches Enter et Espace
        document.addEventListener('keydown', (e) => {
            if (canClick && (e.key === 'Enter' || e.key === ' ' || e.code === 'Space')) {
                e.preventDefault(); // Empêcher le scroll avec Espace
                redirectToNextPage();
            }
        });

        // Fonction pour rediriger vers la bonne page
        function redirectToNextPage() {
            // Vérifier si "Se souvenir de moi" est activé
            const rememberMe = localStorage.getItem('01001_rememberMe');
            const userData = localStorage.getItem('01001_user');
            
            if (rememberMe === 'true' && userData) {
                // Utilisateur déjà connecté, aller directement à Main.html
                window.location.href = 'Main.html';
            } else {
                // Pas de session, aller à Inscription.html
                window.location.href = 'Inscription.html';
            }
        }
    </script>
</body>
</html>
